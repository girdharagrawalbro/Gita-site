const chapters = [
    { chapter_number: 1, verses: Array.from({length: 47}, (_, i) => i + 1) },
    { chapter_number: 2, verses: Array.from({length: 30}, (_, i) => i + 1) },
    { chapter_number: 3, verses: Array.from({length: 21}, (_, i) => i + 1) },
    // Add more chapters as needed
];

const chapter_menu = document.getElementById('chapter_menu');
const verse_content = document.getElementById('verse_content');

// Function to create chapter list
chapters.forEach(element => {
    const chapterItem = document.createElement('li');
    chapterItem.innerHTML = `Chapter ${element.chapter_number}`;
    chapterItem.onclick = () => displayVerses(element.chapter_number);
    chapter_menu.appendChild(chapterItem);
});

// Function to display verses
function displayVerses(chapter_number) {
    const chapter = chapters.find(chap => chap.chapter_number === chapter_number);
    verse_content.innerHTML = `
        <div class="chapter-title">Chapter ${chapter_number}</div>
        <ul>${chapter.verses.map(verse => `<li>${verse}</li>`).join('')}</ul>
    `;
    // Add click event to verses
    document.querySelectorAll('.main-content li').forEach(li => {
        li.onclick = () => {
            document.querySelectorAll('.main-content li').forEach(el => el.classList.remove('active'));
            li.classList.add('active');
        }
    });
}
